FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env
WORKDIR /app

# Copy csproj and restore as distinct layers
COPY . ./
RUN dotnet restore PerfLoader/*.csproj
# RUN dotnet restore *.csproj

# Copy everything else and builud
# COPY . ./
RUN dotnet publish -c Release -o out PerfLoader/*.csproj
# RUN dotnet publish -c Release -o out *.csproj

# Build runtime image
FROM mcr.microsoft.com/dotnet/sdk:6.0
WORKDIR /app
EXPOSE 5137
ENV ASPNETCORE_ENVIRONMENT Development
ENV ASPNETCORE_URLS "http://+:5137"
COPY --from=build-env /app/out .
#ENTRYPOINT ["dotnet", "PerfRunner.dll", "--environment=Development"]
ENTRYPOINT ["dotnet", "PerfLoader.dll"]