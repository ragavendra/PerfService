@page "/AuthGoogle"

<h1>Auth Google</h1>


@if (!string.IsNullOrWhiteSpace(Message))
{
  <div class="alert alert-icon alert-warning">
    <span style="white-space: pre-line">@Message</span>
    <span class="icon-remove icon-white" @onclick="() => Message = string.Empty"></span>
  </div>
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Google Authenticator Sample</title>
    <style type="text/css">
        body
        {
            font-family: Arial;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
    <div>
        <strong>Account Secret Key (randomly generated):</strong>
        <!-- asp:Label runat="server" ID="lblSecretKey"></asp:Label -->
        <label>@SecurityCode</label>
        <hr />
        <strong>Setup QR Code:</strong><br />
        <!-- asp:Image ID="imgQrCode" runat="server" /><br / -->
        <img src=@BarCode>
        <br />
        <strong>Manual Setup Code: </strong>
        <!-- asp:Label runat="server" ID="lblManualSetupCode"></asp:Label -->
        <label>@ManualBarCode</label>
        <hr />
        Validate Code: 
        <!-- asp:TextBox runat="server" ID="txtCode"></asp:TextBox>
        <asp:Button runat="server" ID="btnValidate" Text="Validate My Code!" OnClick="btnValidate_Click" /><br />
        <asp:Label runat="server" Font-Bold="true" ID="lblValidationResult"></asp:Label -->
        <input type="text" @bind=@AuthCode>
        <button @onclick=@btnValidate_Click></button>
        <label>@Message</label>
    </div>
    </form>
</body>
</html>
